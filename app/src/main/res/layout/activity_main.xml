<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/editTextPrimerParcial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Primer Parcial"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextSegundoParcial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Segundo Parcial"
        android:layout_below="@id/editTextPrimerParcial"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnCalcularPromedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular Promedio"
        android:layout_below="@id/editTextSegundoParcial"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCalcularPromedio"
        android:layout_marginTop="16dp"
        android:text="Resultado:"
        android:textSize="18sp"/>

</RelativeLayout>